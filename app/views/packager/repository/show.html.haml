%div.container.container-padding
  %div.panel.panel-default
    %div.panel-heading= @repo.name
    %div.panel-body
      %table.table
        %tr
          %th Package
          %th Release
          %th Version
          %th Download count
          %th Size
          %th Author
          %th Published
        -@github.releases(@repo.name).each do | release |
          -release.assets.each do | asset |
            %tr
              %td
                =link_to(asset.name, asset.browser_download_url)
              %td
                =release.name
              %td
                =link_to(release.tag_name, release.html_url)
              %td
                =asset.download_count
              %td
                =number_to_human_size(asset.size)
              %td
                =link_to(release.author.login,release.author.html_url)
              %td
                =release.published_at.strftime("%m-%d-%Y")
                ="(#{time_ago_in_words(release.published_at)} ago)"
